---
import SocialIcon from "../components/SocialIcon.astro";

interface IconLinks {
    icon: 'github' | 'linkedin' | 'email';
    link: string;
    title?: string;
  }

  const iconLinks: IconLinks[] = [{
      icon: 'github',
      link: 'https://github.com/EmeTeBe',
      title: 'View GitHub Profile'
    },
    {
      icon: 'linkedin',
      link: 'https://www.linkedin.com/in/bernardo-marozzi07/',
      title: 'View LinkedIn Profile'
    },
    {
      icon: 'email',
      link: 'bernimarozzi@gmail.com',
      title: 'Send an Email'
    }
  ];

---

<div class="flex justify-around mt-4">

    {iconLinks.map((iconLinks) => (
        <a 
            href={iconLinks.link} 
            title={iconLinks.title} 
            target="_blank" 
            rel="noopener noreferrer" 
            class="flex border rounded-xl bg-black border-gray-600 size-10 items-center justify-center text-gray-100 hover:bg-primary transition-all duration-150 hover:-translate-y-0.5">
            <SocialIcon icon={iconLinks.icon} />
        
        </a>
    ))}
</div>